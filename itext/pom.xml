            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.santuario</groupId>
            <artifactId>xmlsec</artifactId>
            <version>1.5.1</version>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <reporting>
