                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <configLocation>checkstyle-config.xml</configLocation>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
